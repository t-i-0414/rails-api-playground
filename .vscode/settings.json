{
  "ruby.rubocop.executePath": "/usr/local/bin/",
  "sorbet.enabled": true,
  "sorbet.lspConfigs": [
    {
      "id": "stable",
      "name": "Sorbet",
      "description": "Stable Sorbet Ruby IDE features",
      "cwd": "${workspaceFolder}",
      "command": [
        "bundle",
        "exec",
        "srb",
        "typecheck",
        "--lsp",
        "--watchman-path=/opt/homebrew/bin/watchman"
      ]
    }
  ]
}
